    "lint": "next lint",
    "lint.fix": "next lint --fix",
    "prt": "npx prettier . --check",
    "prt.fix": "npx prettier . --write",
    "------------------------------ test ------------------------------": "",
    "test.type": "tsc --project tsconfig.test.json",
    "test.vitest": "vitest",
    "test.vitest.ui": "vitest --ui",
    "test.playwright": "npx playwright test",
    "test.playwright.ui": "npx playwright test --ui",
    "test.playwright.debug": "npx playwright test --debug",
    "------------------------------ setup ------------------------------": "",
    "test-server": "tsx watch --tsconfig tsconfig.test-server.json test-server/index.ts",
    "db.seeding": "tsx ./__tests__/fixtures/seeding.ts",
    "db.truncate": "tsx ./__tests__/fixtures/truncate.ts",
    "db.reset": "npm run db.truncate && npm run db.seeding"
  },
  "dependencies": {
